#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/tony/web-apps/shamba/node_modules/.pnpm/tsm@2.2.2/node_modules/tsm/node_modules:/home/tony/web-apps/shamba/node_modules/.pnpm/tsm@2.2.2/node_modules:/home/tony/web-apps/shamba/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/tony/web-apps/shamba/node_modules/.pnpm/tsm@2.2.2/node_modules/tsm/node_modules:/home/tony/web-apps/shamba/node_modules/.pnpm/tsm@2.2.2/node_modules:/home/tony/web-apps/shamba/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../tsm/bin.js" "$@"
else
  exec node  "$basedir/../tsm/bin.js" "$@"
fi
